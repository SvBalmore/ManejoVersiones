<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopantalla"
    tools:context=".proveedores">

    <EditText
        android:id="@+id/txtempresa"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="ingrese el nombre de la empresa"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtcontacto"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="ingrese el nombre del contacto"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/txtempresa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtempresa"
        app:layout_constraintTop_toBottomOf="@+id/txtempresa" />

    <EditText
        android:id="@+id/txtcel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="ingrese en numero de telefono"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/txtcontacto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtcontacto"
        app:layout_constraintTop_toBottomOf="@+id/txtcontacto" />

    <Button
        android:id="@+id/btnContacto"
        android:layout_width="233dp"
        android:layout_height="59dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/customer_buttoms"
        android:text="Guardar contacto"
        app:layout_constraintEnd_toEndOf="@+id/txtcel"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/txtcel"
        app:layout_constraintTop_toBottomOf="@+id/txtcel" />

    <TextView
        android:id="@+id/txtSalidaContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="@+id/btnContacto"
        app:layout_constraintStart_toStartOf="@+id/btnContacto"
        app:layout_constraintTop_toBottomOf="@+id/btnContacto" />

    <Button
        android:id="@+id/regresarmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@color/cardview_shadow_end_color"
        android:text="Regresar"
        app:layout_constraintEnd_toEndOf="@+id/txtSalidaContact"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/txtSalidaContact"
        app:layout_constraintTop_toBottomOf="@+id/txtSalidaContact" />
</android.support.constraint.ConstraintLayout>